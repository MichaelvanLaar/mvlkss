{
  "name": "mvlkss",
  "private": true,
  "author": {
    "name": "Michael van Laar",
    "email": "michael@van-laar.de",
    "url": "https://michaelvanlaar.com/"
  },
  "scripts": {
    "build": "npm run clean && webpack --mode production && npx -y hashup",
    "clean": "rimraf assets",
    "dev": "npm run clean && webpack --mode development --watch",
    "dev-server": "concurrently --kill-others \"npm run dev\" \"npm run server\"",
    "server": "php -S localhost:8000 kirby/router.php",
    "test": "npm run lint && npm run test:php && npm run test:js",
    "test:coverage": "npm run test:php:coverage && npm run test:js:coverage",
    "test:js": "vitest run",
    "test:js:coverage": "vitest run --coverage",
    "test:js:ui": "vitest --ui",
    "test:js:watch": "vitest",
    "test:php": "vendor/bin/phpunit",
    "test:php:coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html .coverage/html --coverage-text",
    "test:phpstan": "vendor/bin/phpstan analyse --memory-limit=1G",
    "lint": "npm run lint:php && npm run lint:js && npm run lint:css && npm run lint:yaml",
    "lint:css": "stylelint \"src/css/**/*.css\"",
    "lint:js": "eslint \"src/js/**/*.js\"",
    "lint:js:fix": "eslint \"src/js/**/*.js\" --fix",
    "lint:php": "vendor/bin/phpstan analyse --memory-limit=1G",
    "lint:yaml": "yamllint site/blueprints/**/*.yml",
    "utility-dependencies-update": "node -e \"console.log('==========================\\nUPDATING COMPOSER PACKAGES\\n==========================\\n')\" && composer update -o && composer normalize && node -e \"console.log('\\n\\n=====================\\nUPDATING NPM PACKAGES\\n=====================\\n')\" && ncu -u && npm install && npm audit fix",
    "utility-dependencies-update-check": "node -e \"console.log('==========================\\nCHECKING COMPOSER PACKAGES\\n==========================\\n')\" && composer outdated && node -e \"console.log('\\n\\n=====================\\nCHECKING NPM PACKAGES\\n=====================\\n')\" && ncu",
    "utility-git-branches-clean-up": "node ./utilities/git-branches-clean-up.js",
    "utility-kirby-cache-prefill": "node ./utilities/kirby-cache-prefill.js"
  },
  "browserslist": [
    "> 0.1%, last 2 versions, Firefox ESR, not dead"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.39.1",
    "@prettier/plugin-php": "^0.24.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.18",
    "@vitest/ui": "^4.0.12",
    "axios": "^1.12.2",
    "babel-loader": "^10.0.0",
    "browserslist": "^4.26.2",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "cssnano": "^7.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-compat": "^6.0.2",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "mini-css-extract-plugin": "^2.9.4",
    "npm-check-updates": "^18.3.0",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.13",
    "vitest": "^4.0.12",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "xml2js": "^0.6.2",
    "yaml-lint": "^1.7.0"
  }
}
