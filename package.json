{
  "name": "mvlkss",
  "private": true,
  "author": "Michael van Laar <michael@van-laar.de> (https://michaelvanlaar.com/)",
  "scripts": {
    "clean": "rm -rf assets/{css,js} && rm -f assets/manifest.json",
    "build": "npm run clean && webpack --mode production && npx -y hashup",
    "dev": "npm run clean && webpack --mode development --watch",
    "dev-server": "concurrently --kill-others \"npm run dev\" \"php -S localhost:8000 kirby/router.php\""
  },
  "browserslist": [
    "> 0.1%, last 2 versions, Firefox ESR, not dead"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@prettier/plugin-php": "^0.19.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "browserslist": "^4.21.5",
    "concurrently": "^8.0.1",
    "css-loader": "^6.7.3",
    "cssnano": "^6.0.0",
    "mini-css-extract-plugin": "^2.7.5",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.2.4",
    "prettier": "^2.8.7",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "tailwindcss": "^3.3.1",
    "webpack": "^5.79.0",
    "webpack-cli": "^5.0.1"
